<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sachdeva.eleavegovernor.ChangePassword">
    <TextView
        android:id="@+id/ChangePassword_title"
        android:layout_width="385dp"
        android:layout_height="60dp"
        android:background="@color/black"
        android:textColor="@color/colorWhite"
        android:textSize="28sp"
        android:text="  Change Password"
        android:textStyle="italic"
        android:gravity="center_vertical"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oldPass"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Old Password: "
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChangePassword_title"
        android:layout_marginStart="30dp" />
    <EditText
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:background="@drawable/back"
        android:id="@+id/oldPassword"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/oldPass"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newPass1"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="New Password: "
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oldPassword"
        android:layout_marginStart="30dp" />
    <EditText
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:background="@drawable/back"
        android:id="@+id/newPassword1"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/newPass1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newPass2"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Re-enter Password: "
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPassword1"
        android:layout_marginStart="30dp" />
    <EditText
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:background="@drawable/back"
        android:id="@+id/newPassword2"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/newPass2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginBottom="95dp"
        android:background="@drawable/button1"
        android:onClick="changePassword"
        android:text="submit"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/newPassword2"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>
