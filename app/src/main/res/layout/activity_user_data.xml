<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sachdeva.eleavegovernor.UserDataActivity">
    <TextView
        android:id="@+id/userDetails"
        android:layout_width="385dp"
        android:layout_height="65dp"
        android:text="  Add User Details"
        android:background="@color/black"
        android:textSize="28sp"
        android:textStyle="italic"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: "
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="98dp"
        app:layout_constraintTop_toTopOf="@+id/userDetails"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />

    <RadioGroup
        android:id="@+id/selectGender"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:orientation="vertical"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gender"
        android:layout_marginStart="48dp">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="22sp" />
        <RadioButton
            android:id="@+id/female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Female"
            android:textSize="22sp" />
    </RadioGroup>

    <Spinner
        android:id="@+id/select_department"
        android:background="@drawable/back"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginLeft="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/department" />

    <TextView
        android:id="@+id/department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Department: "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/selectGender" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/designation"
        android:text="Select Designation: "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_department"/>
    <Spinner
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/select_designation"
        android:background="@drawable/back"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/designation"></Spinner>
    <Button
        android:id="@+id/button6"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button1"
        android:onClick="register"
        android:text="OK"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
